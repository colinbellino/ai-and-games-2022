{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Windows: build (debug)",
            "type": "shell",
            "command": "date_time=$(date +%Y-%m-%d_%H-%M) && echo $date_time && ./build_version.sh && mkdir -p ./builds/Windows/$date_time && godot --no-window --export-debug 'Windows' ./builds/Windows/$date_time/AI2022.exe && ./builds/Windows/$date_time/AI2022.exe",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Windows: build (release)",
            "type": "shell",
            "command": "date_time=$(date +%Y-%m-%d_%H-%M) && echo $date_time && ./build_version.sh && mkdir -p ./builds/Windows/$date_time && godot --no-window --export 'Windows' ./builds/Windows/$date_time/AI2022.exe && ./builds/Windows/$date_time/AI2022.exe",
            "problemMatcher": []
        },
        {
            "label": "Windows: deploy",
            "type": "shell",
            "command": "butler push ./builds/Windows/${input:folder} colinbellino/ai-and-games-2022:win",
            "problemMatcher": []
        },
        {
